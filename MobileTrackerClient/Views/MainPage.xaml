<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MobileTrackerClient.ViewModels"
             x:Class="MobileTrackerClient.Views.MainPage"
             x:DataType="{x:Type viewmodels:MainViewModel}"
             Title="Register Tracking">

    <Grid RowDefinitions="20, 20, *">
        <Label>Server Ip:</Label>
        <Entry Grid.Row="1" Text="{Binding ServerIp}"/>
        <Button Text="Submit" Command="{Binding ConnectTriggeredCommand}"/>
    </Grid>
</ContentPage>
